module Block

imports
  CompoundStatement
  LeftHandSide

context-free syntax

  Block = BraceBlock
  Block = DoBlock
  
  BraceBlock.BraceBlock = <{ <BlockParameter?> <BlockBody> }>
  
  DoBlock.DoBlock = <do <BlockParameter?> <BlockBody> end>
  
  //TODO: Exact 1 of 2 whitespaces
  BlockParameter.BlockPar2 = "| |"
  BlockParameter.BlockPar1 = "||"
  BlockParameter.BlockParList = <| <BlockParameterList> |>
  
  BlockParameterList = LHS
  BlockParameterList = MLHS
  
  BlockBody = CStmt